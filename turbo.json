{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["generate:es", "^build"],
        "outputs": [".next/**", "!.next/cache/**", "dist/**"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "test": {
        "cache": true,
        "outputs": ["coverage/**"]
      },
      "typecheck": {
        "cache": true
      },
      "format": {
        "cache": true
      },
      "lint": {
        "cache": true
      }
    }
  }
